<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/a18fa9a70e.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/home.css">
    <title><%= title %></title>
</head>

<body>

    <!-- <%- include('_header') %> -->
    <div class="c container ">

   

        <div class="accordion">

            <div id="flip"><i class="fa-solid fa-plus">Add Project</i></div>
            <div id="panel">

                <%- include('_add_project_form') %>


            </div>


        </div>
    </div>

        <div class="container">
            <div class="main">
                <div class="head">
                    <h1>Issue Tracker</h1>
                    <!-- <form action="">
                        <input type="submit" name="addproject" id="add" value="Add project">
                    </form> -->
                    <a href=""></a>

                </div>
                <div class="project">




                    <section class="project-list">

                        <% for(project of projects) { %>

                            <div class="project-div">

                                <div class="project-name">
                                    <h1>
                                        <%= project.projectName %>
                                    </h1>
                                    <% if(locals.user && locals.user.id==project.user.id) {%>



                                        <p class="del">
                                            <a href="/project/destroy/<%= project.id %>">
                                                <i class="fa-sharp fa-solid fa-trash"></i>
                                            </a>
                                        </p>


                                        <%} %>
                                </div>
                                <div class="project-details">
                                    <h1>
                                        <small> Author :</small>
                                        <%= project.auther %>
                                    </h1>
                                    <div class="data">
                                        <p>
                                            <small>description</small>
                                            <%= project.description %>
                                        </p>
                                        <!-- <p>
                                           <small>user:</small> <%= project.user.name %>
                                        </p> -->
                                        <p>
                                            <a href="/project/open-project/<%= project._id %>"><i class="fa-solid fa-folder-open"></i>Open Project</a>
                                        </p>

                                        <% if(locals.user && locals.user.id==project.user.id) {%>



                                            <!-- <p><a href="/project/destroy/<%= project.id %>">delete</a></p> -->


                                            <%} %>








                                    </div>
                                </div>
                            </div>

                            <% } %>




                    </section>

                </div>

            </div>
            
        </div>

        <!-- <%- include('_footer') %> -->
            <script src="/js/add_project_dailoge.js"></script>
</body>

</html>